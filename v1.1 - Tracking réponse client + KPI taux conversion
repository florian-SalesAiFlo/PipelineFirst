    // ============================================
    // ALGORITHME DE MATCHING CONSULTANT <-> OPPORTUNITÉ
    // ============================================

    /**
     * Calcule le score de match entre un consultant et une opportunité
     * @returns Score entre 0 et 100
     */
    function calculateMatchScore(consultant, opportunite) {
      let score = 0;

      // 1. COMPÉTENCES (40 points max)
      // Plus le consultant a de compétences requises, mieux c'est
      const competencesRequises = opportunite.competencesRequises || [];
      const competencesConsultant = consultant.competences || [];
      
      if (competencesRequises.length > 0) {
        const competencesEnCommun = competencesRequises.filter(comp => 
          competencesConsultant.includes(comp)
        ).length;
        const tauxMatch = competencesEnCommun / competencesRequises.length;
        score += tauxMatch * 40;
      }

      // 2. TJM (30 points max)
      // Moins l'écart est grand entre TJM consultant et TJM proposé, mieux c'est
      const tjmConsultant = consultant.tjm || 500;
      const tjmOpp = opportunite.tjmPropose || 500;
      const ecartTjm = Math.abs(tjmConsultant - tjmOpp);
      const tauxEcartTjm = Math.max(0, 1 - (ecartTjm / tjmOpp));
      score += tauxEcartTjm * 30;

      // 3. DISPONIBILITÉ (20 points max)
      // Plus le consultant est en intercontrat longtemps, plus c'est urgent
      const jours = consultant.joursIntercontrat || 0;
      const urgenceScore = Math.min(jours / 60, 1); // Max à 60 jours
      score += urgenceScore * 20;

      // 4. SÉNIORITÉ (10 points max)
      // Années d'expérience cohérentes avec la mission
      const experience = consultant.anneesExperience || 5;
      let senioriteScore = 0;
      if (experience >= 7) senioriteScore = 10; // Senior
      else if (experience >= 4) senioriteScore = 8; // Confirmé
      else if (experience >= 2) senioriteScore = 5; // Junior+
      else senioriteScore = 3; // Junior
      score += senioriteScore;

      return Math.round(score);
    }

    /**
     * Récupère toutes les opportunités qui matchent avec un consultant
     * @returns Array d'opportunités avec leur score de match
     */
    function getMatchedOpportunites(consultantId) {
      const consultant = mockConsultants.find(c => c.id === consultantId);
      if (!consultant) return [];

      return mockOpportunites
        .filter(opp => opp.consultantsMatches && opp.consultantsMatches.includes(consultantId))
        .map(opp => ({
          ...opp,
          matchScore: calculateMatchScore(consultant, opp)
        }))
        .sort((a, b) => b.matchScore - a.matchScore);
    }

    /**
     * Compte le nombre d'opportunités actives pour un consultant
     */
    function countMatchedOpportunites(consultantId) {
      return mockOpportunites.filter(opp => 
        opp.consultantsMatches && 
        opp.consultantsMatches.includes(consultantId) &&
        (opp.statut === 'nouvelle' || opp.statut === 'en_cours')
      ).length;
    }

